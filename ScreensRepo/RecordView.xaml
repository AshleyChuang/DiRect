<src:MenuViewBase x:Class="ScreensRepo.RecordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreensRepo"
             xmlns:src="clr-namespace:ScreensInterfaces;assembly=ScreensInterfaces"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:chartingprimitives="clr-namespace:System.Windows.Controls.DataVisualization.Charting.Primitives;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             mc:Ignorable="d"
             xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             d:DesignHeight="313" d:DesignWidth="382">
    <UserControl.Resources>
        <Style x:Key="DateTimeAxis" TargetType="chartingToolkit:DateTimeAxis">
            <Setter Property="AxisLabelStyle">
                <Setter.Value>
                    <Style TargetType="chartingToolkit:DateTimeAxisLabel">
                        <Setter Property="StringFormat" Value="{}{0:HH:mm}"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BlueAreaSeriesStyle" TargetType="Control">
            <Setter Property="Background" Value="#FF058BD8" />
            <Setter Property="Opacity" Value="1"></Setter>
        </Style>
        <Style x:Key="AreaSeries" TargetType="chartingToolkit:AreaSeries">
            <Setter Property="IsSelectionEnabled" Value="False"/>
            <Setter Property="TransitionDuration" Value="0"/>
            <Setter Property="DataPointStyle">
                <Setter.Value>
                    <Style TargetType="chartingToolkit:AreaDataPoint" BasedOn="{StaticResource BlueAreaSeriesStyle}">
                        <EventSetter Event="Control.MouseLeftButtonDown" Handler="LineSeriesDataPoint_MouseLeftButtonDown"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="chartingToolkit:AreaDataPoint">
                                    <Grid>
                                        <Rectangle Fill="{TemplateBinding Background}" Stroke="Black" Margin="-2 -2 -2 -2"/>
                                        <Grid Margin="-20 -20 -20 -20" HorizontalAlignment="Center" VerticalAlignment="Top">
                                            <TextBlock Text="{TemplateBinding FormattedDependentValue}"/>
                                        </Grid>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AreaChart" TargetType="chartingToolkit:Chart">
            <Setter Property="TitleStyle">
                <Setter.Value>
                    <Style TargetType="Control">
                        <Setter Property="Height" Value="0"/>
                        <Setter Property="TextBlock.Text" Value=""/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ChartAreaStyle">
                <Setter.Value>
                    <Style TargetType="chartingprimitives:EdgePanel">
                        <Setter Property="Width" Value="2400"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="LegendStyle">
                <Setter.Value>
                    <Style TargetType="Control">
                        <Setter Property="Width"  Value="0"></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <m:Map x:Name="mapView" CredentialsProvider="KEEEDTBMuatP82T0lBaz~LyodepcBdLJbXPBIPbavGQ~An_AVM9YZUJmROHUkFUGL2ujCmxsUDNCpps94i5ACIJYMuB9I-Ex3jihxTYdpj1x"
                           Height="400" />
                </Grid>
                <ScrollViewer
                    x:Name="ScrollArea" BorderThickness="0"
                    HorizontalScrollBarVisibility="Visible"
                    VerticalScrollBarVisibility="Hidden">
                    <chartingToolkit:Chart
                        Margin="0,0,0,0" Name="chart1"
                        VerticalAlignment="Top"
                        Height="300" Width="auto"
                        MouseMove="chart1_MouseMove"
                        MouseUp="chart1_MouseUp"
                        Padding="0"
                        Style="{StaticResource AreaChart}">

                        <chartingToolkit:Chart.Axes>
                            <chartingToolkit:LinearAxis 
                                Name="myLinearAxis"
                                Orientation="Y" Visibility="Hidden" ShowGridLines="True"/>
                            <chartingToolkit:DateTimeAxis 
                                Name="myDateTimeAxis"
                                Orientation="X" ShowGridLines="True" 
                                Style="{StaticResource DateTimeAxis}"/>
                        </chartingToolkit:Chart.Axes>

                        <chartingToolkit:AreaSeries 
                            Name="myLineSeries"
                            ItemsSource="{Binding waterLevel}"
                            DependentValueBinding="{Binding Path=Value}"
                            IndependentValueBinding="{Binding Path=Date}" 
                            Style="{StaticResource AreaSeries}"/>

                        <chartingToolkit:Chart.PlotAreaStyle>
                            <Style>
                                <Setter Property="Canvas.Background" Value="White"></Setter>
                            </Style>
                        </chartingToolkit:Chart.PlotAreaStyle>

                    </chartingToolkit:Chart>
                    
                </ScrollViewer>
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock x:Name="TimeTextBlock" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" Text="Time: " />
                    <TextBox x:Name="TimeTextBox" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" Text="" IsReadOnly="True" />

                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" >
                        <TextBlock x:Name="Latitude" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Latitude: " Margin="10,10,10,10" />
                        <TextBox x:Name="LatitudeTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text=""  Width="120" Margin="10,10,10,10"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock x:Name="Longitude"   TextWrapping="Wrap" Text="Longitude: " HorizontalAlignment="Left" Margin="10,10,10,10"/>
                        <TextBox x:Name="LongitudeTextBox" Height="23" TextWrapping="Wrap" Text=""  Width="120" HorizontalAlignment="Left" Margin="10,10,10,10"/>
                    </StackPanel>
                </Grid>
                <!-- 
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left">
