                    <ComboBox x:Name="AreaNameComboBox" HorizontalAlignment="Left"  Margin="10,10,10,10" Height="23"  VerticalAlignment="Top" Width="70" Text="區"/>
                    <ComboBox x:Name="StreetNameComboBox" HorizontalAlignment="Left"  Margin="10,10,10,10" Height="23"  VerticalAlignment="Top" Width="70" Text="街"/>
                    <TextBox x:Name="LaneNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Margin="10,10,10,10" Text="" VerticalAlignment="Top" Width="30"/>
                    <TextBlock x:Name="LaneTextBlock" HorizontalAlignment="Left"  Margin="0,10,0,10" TextWrapping="Wrap" Text="巷" />
                    <TextBox x:Name="AlleyNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Margin="10,10,10,10" Text="" VerticalAlignment="Top" Width="30"/>
                    <TextBlock x:Name="AlleyTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="0,10,0,10" Text="弄" />
                    <TextBox x:Name="NoNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" Margin="10,10,10,10" VerticalAlignment="Top" Width="30"/>
                    <TextBlock x:Name="NoTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="0,10,0,10" Text="號" />
                </StackPanel>               
                -->
                

                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock x:Name="WaterLevelTextBlock" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" Text="WaterLevel: " VerticalAlignment="Top"/>
                    <TextBox x:Name="WaterLevelTextBox" HorizontalAlignment="Left" Margin="10,10,10,10" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                </StackPanel>
                <StackPanel  Orientation="Vertical" HorizontalAlignment="Left">
                    <TextBlock x:Name="DescriptionTextBlock" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" Text="Description: " VerticalAlignment="Top"/>
                    <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Margin="10,10,10,10" Height="50" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
                </StackPanel>
                <Button x:Name="Save_Button" Content="Save" Click="Click_On_Save_Button" HorizontalAlignment="Left"  Margin="10,10,10,10" VerticalAlignment="Top" Width="75"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</src:MenuViewBase>
